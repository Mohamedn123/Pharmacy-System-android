<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProductAdmin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/loading"
                android:id="@+id/ProductImageAdmin"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:layout_below="@id/ProductImageAdmin"
                android:layout_marginLeft="20dp"
                android:id="@+id/ProductNameLabel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the Product Name"
                android:layout_below="@+id/ProductImageAdmin"
                android:layout_toRightOf="@+id/ProductNameLabel"
                android:textSize="20sp"
                android:id="@+id/ProductNameAdmin"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="20sp"
                android:layout_below="@id/ProductNameLabel"
                android:layout_marginLeft="20dp"
                android:id="@+id/CategoryLabel"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the Product Category"
                android:layout_below="@+id/ProductNameAdmin"
                android:layout_toRightOf="@+id/CategoryLabel"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/ProductCategoryAdmin"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="20sp"
                android:layout_below="@id/CategoryLabel"
                android:layout_marginLeft="20dp"
                android:id="@+id/PriceLabel"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the Product Price"
                android:layout_below="@+id/ProductCategoryAdmin"
                android:layout_toRightOf="@+id/PriceLabel"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/ProductPriceAdmin"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="20sp"
                android:layout_below="@id/PriceLabel"
                android:layout_marginLeft="20dp"
                android:id="@+id/QuantityLabel"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the Product Price"
                android:layout_below="@+id/ProductPriceAdmin"
                android:layout_toRightOf="@+id/PriceLabel"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/ProductQuantityAdmin"
                />
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Edit this Product"
                android:layout_below="@+id/QuantityLabel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:id="@+id/EditProduct"/>
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Delete this Product"
                android:layout_below="@+id/EditProduct"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@android:color/holo_red_dark"
                android:id="@+id/DeleteProduct"
                android:textColor="#fff"/>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>